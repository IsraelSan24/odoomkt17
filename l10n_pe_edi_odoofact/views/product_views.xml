<?xml version="1.0" encoding="utf-8"?>
<odoo>    
    <record model="ir.ui.view" id="product_template_form_view_inherit">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">                           
            <field name="detailed_type" position="after">
                <field name="l10n_pe_edi_product_code_id" options="{'no_create': True}"/>
                <field name="l10n_pe_edi_is_for_advance" widget="boolean_toggle"/>
            </field>
            <xpath expr="//label[@for='standard_price']" position="before">
                <field
                    name="l10n_pe_edi_detraction_type_id"
                    domain="[('code_of','!=',False),('rate','>',0.0)]"
                    options="{'no_create': True, 'no_open': True}"
                />
            </xpath>
        </field>
    </record>
</odoo>
