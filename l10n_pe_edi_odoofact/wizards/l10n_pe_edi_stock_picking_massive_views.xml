<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_stock_picking_wizard" model="ir.ui.view">
        <field name="name">l10n.pe.edi.stock.picking.massive.form</field>
        <field name="model">l10n.pe.edi.stock.picking.massive</field>
        <field name="arch" type="xml">
            <form string="Select Referral Guides">
                <field name="invoice_id" invisible="1"/>
                <field name="picking_ids" nolabel="1" options="{'no_edit': True, 'no_create': True, 'no_open': True}"/>
                <footer>
                    <button name="action_add_picking" type="object" string="Add" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_stock_picking_wizard" model="ir.actions.act_window">
        <field name="name">View Guides</field>
        <field name="res_model">l10n.pe.edi.stock.picking.massive</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>