<odoo>
    <data>
        <record id="view_invoice_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_enviar_nubefact"
                            string="Enviar a Nubefact"
                            type="object"
                            class="btn-primary"
                            modifiers="{'invisible': [['state', '!=', 'posted'], ['nubefact_enviado', '=', True]]}"/>
                    
                    <field name="nubefact_enviado"
                           string="Enviado a Nubefact"
                           modifiers="{'readonly': True, 'invisible': [['nubefact_enviado', '=', False]]}"/>
                </xpath>

                <xpath expr="//page[@id='invoice_tab']" position="after">
                    <page name="nubefact_tab" string="Nubefact">
                        <group>
                            <field name="nubefact_respuesta"
                                   string="Respuesta de Nubefact"
                                   modifiers="{'readonly': True}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>