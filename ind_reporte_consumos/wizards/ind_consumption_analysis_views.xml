<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista del Wizard -->
        <record id="view_consumption_analysis_wizard_form" model="ir.ui.view">
            <field name="name">view.consumption.analysis.wizard.form</field>
            <field name="model">ind.consumption.analysis</field>
            <field name="arch" type="xml">
                <form string="Consumption Analysis Report">
                    <group>
                        <field name="date_from" required="1"/>
                        <field name="date_to" required="1"/>
                        <field name="company_id" required="1"/>
                    </group>
                    <footer>
                        <button name="generate_consumption_report" string="Generar Reporte" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    
        <!-- Acción del Wizard -->
        <record id="action_consumption_analysis_wizard" model="ir.actions.act_window">
            <field name="name">Consumption Analysis</field>
            <field name="res_model">ind.consumption.analysis</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_consumption_analysis_wizard_form"/>
            <field name="target">new</field>
            <field name="context">{'no_create_edit': True}</field>
        </record>
    
        <!-- Menú -->
        <menuitem id="menu_consumption_analysis" 
                  name="Reporte de Consumos" 
                  parent="stock.menu_warehouse_report" 
                  action="action_consumption_analysis_wizard" 
                  sequence="20"
                  groups="ind_reporte_consumos.res_group_consumption_report_user"/>
    </data>
</odoo>
