<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_custom_driving_employee_form" model="ir.ui.view">
        <field name="name">Custom for Driving Employee Form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='private_car_plate']" position="after">
                <field name="driving_license_number"/>
            </xpath>
        </field>
    </record>

    <record id="view_custom_employee_form" model="ir.ui.view">
        <field name="name">Custom Employee Form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='private_street']" position="before">
                <field name="partner_id"/>
            </xpath>
        </field>
    </record>

</odoo>
